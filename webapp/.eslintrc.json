{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "prettier/prettier": "error",
        "react/prefer-es6-class": "warn",
        "react/prefer-stateless-function": "warn",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
